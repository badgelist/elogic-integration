<%= form_for :session, url: session_path do |form| %>
  <div class="text-field">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email', autofocus: true %>
  </div>

  <div class="password-field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="footer">
    <%= form.submit class: 'button jumbo raised deep-orange' %>
  </div>
<% end %>
