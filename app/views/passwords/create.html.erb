<% 
  provide(:window_title, 'Password reset complete') 
%>

<div id="clearance" class="panel password-reset">

  <div class="header">
    <div id="app-name">Check your email</div>
  </div>
  
  <div class="body">
    <p><%= t('.description') %></p>
  </div>

  <div class="footer">
    <ul class="links">
      <li>
        <%= link_to '<i class="zmdi zmdi-arrow-left"></i> Return to sign in'.html_safe, sign_in_path %>
      </li>
    </div>
  </div>

</div>
